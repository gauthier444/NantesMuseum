{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reservation.Name }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ reservation.FirstName }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ reservation.PhoneNumber }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ reservation.Mail }}</td>
            </tr>
            <tr>
                <th>MuseumChoice</th>
                <td>{{ reservation.MuseumChoice }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.Date ? reservation.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

