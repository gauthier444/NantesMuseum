<form method="post" action="{{ path('expo_delete', {'id': expo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expo.id) }}">
    <button class="btn">Supprimez l'exposition</button>
</form>
