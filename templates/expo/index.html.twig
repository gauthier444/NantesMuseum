{% extends 'base.html.twig' %}

{% block title %}Liste des expositions{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/expo_index.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display+SC" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/css/bootstrap.min.css" integrity="sha384-PDle/QlgIONtM1aqA2Qemk5gPOE7wFq8+Em+G/hmo5Iq0CCmYZLv3fVRDJ4MMwEA" crossorigin="anonymous">
{% endblock %}


{% block body %}
    <h1>Expositions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Location</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expo in expos %}
            <tr>
                <td>{{ expo.Name }}</td>
                <td>{{ expo.Description }}</td>
                <td>{{ expo.Location }}</td>
                <td>{{ expo.Date ? expo.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('expo_show', {'id': expo.id}) }}">show</a>
                    <a href="{{ path('expo_edit', {'id': expo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('expo_new') }}">Create new</a>
{% endblock %}
